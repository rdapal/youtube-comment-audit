{
  "manifest_version": 3,
  "name": "Youtube Comment Audit",
  "version": "1.0.0",
  "description": "AI-powered cleaner for your YouTube comment history.",
  "permissions": ["storage"], 
  "host_permissions": ["https://myactivity.google.com/*"],
  "action": {
    "default_popup": "src/popup/index.html", 
    "default_title": "Audit Settings"
  },
  "content_scripts": [
    {
      "matches": ["https://myactivity.google.com/*"],
      "js": ["assets/content.js"],
      // "css": ["assets/content.css"],  <-- REMOVE OR COMMENT OUT THIS LINE
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://myactivity.google.com/*"]
    }
  ]
}
